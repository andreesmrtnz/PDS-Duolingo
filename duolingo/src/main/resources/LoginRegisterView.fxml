<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="DualPanelController"
           stylesheets="@styles.css"
           prefWidth="800" prefHeight="450">

    <!-- Vista de REGISTRO (por defecto visible) -->
    <HBox fx:id="registerPane" spacing="0" StackPane.alignment="CENTER">
        <!-- Panel Izquierdo: Fondo Blanco (Texto, campos) -->
        <VBox fx:id="registerLeft" spacing="20" prefWidth="400" prefHeight="450" alignment="CENTER">
            <padding>
                <Insets top="50" right="30" bottom="50" left="30"/>
            </padding>
            <children>
                <Label text="Create Account" styleClass="header-label" />
                <TextField promptText="Name" fx:id="regNameField"/>
                <TextField promptText="Email" fx:id="regEmailField"/>
                <PasswordField promptText="Password" fx:id="regPassField"/>
                <Button text="SIGN UP" styleClass="action-button" onAction="#handleRegister"/>
            </children>
        </VBox>

        <!-- Panel Derecho: Fondo Verde/Azul, mensaje de bienvenida y botón SIGN IN -->
        <VBox fx:id="registerRight" spacing="20" prefWidth="400" prefHeight="450" alignment="CENTER">
            <padding>
                <Insets top="50" right="30" bottom="50" left="30"/>
            </padding>
            <children>
                <Label text="Welcome Back!" styleClass="header-label" />
                <Label text="To keep connected with us,\nplease login with your personal info" />
                <Button text="SIGN IN" styleClass="switch-button" onAction="#switchToLogin"/>
            </children>
        </VBox>
    </HBox>

    <!-- Vista de LOGIN (por defecto invisible) -->
    <HBox fx:id="loginPane" spacing="0" StackPane.alignment="CENTER" visible="false" managed="false">
        <!-- Panel Izquierdo: Fondo Verde/Azul, mensaje de “Bienvenido” y botón SIGN UP -->
        <VBox fx:id="loginLeft" spacing="20" prefWidth="400" prefHeight="450" alignment="CENTER">
            <padding>
                <Insets top="50" right="30" bottom="50" left="30"/>
            </padding>
            <children>
                <Label text="Hello, Friend!" styleClass="header-label" />
                <Label text="Enter your personal details\nand start your journey with us" />
                <Button text="SIGN UP" styleClass="switch-button" onAction="#switchToRegister"/>
            </children>
        </VBox>

        <!-- Panel Derecho: Fondo Blanco (Campos de Login) -->
        <VBox fx:id="loginRight" spacing="20" prefWidth="400" prefHeight="450" alignment="CENTER">
            <padding>
                <Insets top="50" right="30" bottom="50" left="30"/>
            </padding>
            <children>
                <Label text="Sign In" styleClass="header-label" />
                <TextField promptText="Email" fx:id="loginEmailField"/>
                <PasswordField promptText="Password" fx:id="loginPassField"/>
                <Button text="SIGN IN" styleClass="action-button" onAction="#handleLogin"/>
            </children>
        </VBox>
    </HBox>
</StackPane>
